<h1 class="text-center">Favorite Anime</h1>

<div class="container">
<% favorites.forEach(anime => { %>
    <ul>
    <!-- ANIME DETAILS -->
    <div>
        <a href="/anime/details/<%= anime.dataValues.uniqueId %>">
            <img src="<%= anime.dataValues.image %>" alt="<%= anime.dataValues.title %>">
        </a>
    </div>
    <!-- DELETE BUTTON -->
    <form method="POST" action="/anime/favorites/<%= anime.dataValues.id %>/?_method=DELETE">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>
    </ul>
<% }); %>
</div>

<br/>
<a href="/">&larr; Home</a>